<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- App title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Eight Ball (slightly smaller to fit history below) -->
    <FrameLayout
        android:id="@+id/ballContainer"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ball_outer"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/eight_ball_label"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <!-- Inner blue window -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_ball_inner">

            <!-- Answer text displayed inside the window -->
            <TextView
                android:id="@+id/answerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="It is certain" />

        </FrameLayout>

        <!-- "8" numeral at top of ball -->
        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/eight_numeral"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Hint label -->
    <TextView
        android:id="@+id/shakeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/hint_shake"
        android:textColor="@color/input_hint"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ballContainer" />

    <!-- Question input -->
    <EditText
        android:id="@+id/questionInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_input"
        android:hint="@string/hint_question"
        android:textColorHint="@color/input_hint"
        android:textColor="@color/white"
        android:padding="12dp"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/askButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shakeHint" />

    <!-- Ask button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/askButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/btn_ask"
        android:textColor="@color/white"
        app:backgroundTint="@color/ball_inner_bg"
        app:cornerRadius="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/questionInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/questionInput" />

    <!-- History section header -->
    <TextView
        android:id="@+id/historyLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="0dp"
        android:text="@string/history_label"
        android:textColor="@color/input_hint"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/questionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clearHistoryButton" />

    <!-- Clear history button -->
    <ImageButton
        android:id="@+id/clearHistoryButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_clear_all"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/clear_history"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/historyLabel"
        app:layout_constraintBottom_toBottomOf="@id/historyLabel" />

    <!-- Divider line -->
    <View
        android:id="@+id/historyDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@color/history_divider"
        app:layout_constraintTop_toBottomOf="@id/historyLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- History list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/historyDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_history" />

</androidx.constraintlayout.widget.ConstraintLayout>
