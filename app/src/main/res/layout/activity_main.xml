<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- App title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Eight Ball -->
    <FrameLayout
        android:id="@+id/ballContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_ball_outer"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <!-- Inner blue window -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_ball_inner">

            <!-- Answer text displayed inside the window -->
            <TextView
                android:id="@+id/answerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="It is certain" />

        </FrameLayout>

        <!-- "8" numeral at top of ball -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/eight_numeral"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Hint label -->
    <TextView
        android:id="@+id/shakeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Shake or tap the ball, or type your question below"
        android:textColor="@color/input_hint"
        android:textSize="13sp"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ballContainer" />

    <!-- Question input -->
    <EditText
        android:id="@+id/questionInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_input"
        android:hint="@string/hint_question"
        android:textColorHint="@color/input_hint"
        android:textColor="@color/white"
        android:padding="14dp"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/askButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shakeHint"
        app:layout_constraintVertical_bias="0.1" />

    <!-- Ask button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/askButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/btn_ask"
        android:textColor="@color/white"
        app:backgroundTint="@color/ball_inner_bg"
        app:cornerRadius="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/questionInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/questionInput" />

</androidx.constraintlayout.widget.ConstraintLayout>
